<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"/>

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- include('header', {adminFName, adminLName}) -->
    <%- include('partials/header') %>

    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('partials/sidebar') %>

      <div id="content-wrapper">
        <div class="container-fluid">
          <div class="card mb-3">
            <div class="card-header">
              <a href="/users/update-gender" title="secret reset gender" class="hidden-link">
                <i class="fas fa-users"></i>
                Liste des clients
              </a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table
                  id="users-list"
                  class="table table-bordered"
                  width="100%"
                  cellspacing="0"
                >
                  <thead>
                    <tr>
                      <th>Prénom</th>
                      <th>Nom</th>
                      <th>email</th>
                      <th>password</th>
                      <th>Age</th>
                      <th>Gender</th>
                      <th>Pronouns</th>
                      <th>Date inscription</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Prénom</th>
                      <th>Nom</th>
                      <th>email</th>
                      <th>password</th>
                      <th>Age</th>
                      <th>Gender</th>
                      <th>Pronouns</th>
                      <th>Date inscription</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% console.log(users[0]);
                    let icon = '';
                    let color = '';
                    let title = '';
                    for(let i = 0 ; i < users.length; i++){
                      if(users[i].pronoun1 === 'he'){
                        icon = "fa-male";
                        color = 'he';
                        title = 'Mr';
                      } else if(users[i].pronoun1 === 'she'){
                    icon = "fa-female";
                    color = 'she';
                    title = 'Mrs';
                  } else if(users[i].pronoun1 === 'they'){ 
                    icon = "fa-male"; 
                    color = 'they'; 
                    title = 'Mx'; 
                  } %>
                    <tr>
                      <td><%=users[i].firstName%></td>
                      <td><%=users[i].lastName%></td>
                      <td><%=users[i].email%></td>
                      <td>*******</td>
                      <td><%=users[i].age%></td>
                      <td class="<%=color%>">
                        <i class="fas <%=icon%>"></i> <%=title%>
                      </td>
                      <td class="<%=color%>">
                        <%=users[i].pronoun1%> / <%=users[i].pronoun2%>
                      </td>
                      <td><%=dateFormat(users[i].dateInsert)%></td>
                    </tr>
                    <%}%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>
      </div>
      <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>
  </body>
</html>
